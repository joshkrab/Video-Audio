         <div class="video1">
            <h1>Привет видео :)</h1>

            <!-- Атрибуты тега "video" -->

            <!-- src, width, height - и так понятно -->
            <!-- muted - выключает аудиодорожку -->
            <!-- autoplay - автовоспроизведение -->
            <!-- controls - добавляет панель управления к видеоролику -->
            <!-- loop - зацикливает воспроизведение по кругу -->
            <!-- poster - адрес картинки(обложки) на случай не воспр-я видео -->

            <!-- preload - загрузка видео со страницей -->
            <!-- Значения атрибута preload: -->
            <!-- none - не предзагружать -->
            <!-- metadata - только метаданные (например длина) -->
            <!-- auto - предзагружать весь файл -->
            <!-- пустая строка = auto -->

            <!-- Спецификацие реккомендует использовать значение "метадата" -->
            <!-- Если preload не задать - каждый браузер может присвоить по разному -->

            <!-- В хроме автоплей работает только с мьютид -->

            <video
               class="video1__item"
               controls
               poster="img/forest-poster.jpg"
               muted
               autoplay
               loop
            >
               <!-- Вместо атрибута src указываем пути: -->
               <!-- Сначала грузиться первый файл: -->
               <source src="videos/forest.webm" type="video/webm" />

               <!-- Если первый не поддерживается, то загрузиться этот -->
               <source src="videos/forest.mp4" type="video/mp4" />
            </video>
         </div>

